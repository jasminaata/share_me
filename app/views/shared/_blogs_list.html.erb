<div class="size1of4 unit">
  <div class="line">
    <div class="horizontal-inner">
      <div class="blog-list">
        <div class="inner">
          <h3 class="bottom-inner"><%= title %></h3>
          <% @blogs.each do |blog| %>
          <div class="line">
            <%= link_to blog.title, blog_path(blog) %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>