<div class="container">
  <div class="line">
    <div class="inner">
      <h1><%= @category.name %></h1>
    </div>
  </div>
  <div class="line">
    <div class="inner">
      <% @category.blogs.each do |blog| %>
      <div>
        <h3>
          <%= link_to blog.title, blogs_path %>
        </h3>
        <p>
          <%= truncate blog.body, length: 160 %>
        </p>
      </div>
      <% end %>
    </div>
  </div>
</div>
