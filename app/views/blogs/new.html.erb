<h3>New blog</h3>
<%= form_for @blog do |f| %>
  <div>
    <%= f.label :title, 'Title' %><br/>
    <%= f.text_field :title %>
  </div><br/>
  <div>
    <%= f.label :body %></br/>
    <%= f.text_area :body %>
  </div><br/>
  <div>
    <%= f.submit "Create" %>
  </div>
<% end %>
<%= link_to "All blogs", controller: 'blogs', action: 'show'%>