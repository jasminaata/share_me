<%= form_for @blog do |f| %>
  <div>
    <%= f.label :title, 'Title' %><br/>
    <%= f.text_field :title %>
  </div><br/>
  <div>
    <%= f.label :body %></br/>
    <%= f.text_area :body %>
  </div><br/>
  <div>
    <%= f.label :category %></br>
    <%= f.select :category_id, Category.all.collect { |cat| [cat.name, cat.id] }, :include_blank => true  %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
<%= link_to "All blogs", root_path %>